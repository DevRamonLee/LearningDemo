    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ramon.lee.androidui.customview.view.PathBasic
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <ramon.lee.androidui.customview.view.BezierView
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <ramon.lee.androidui.customview.view.BezierView2
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <ramon.lee.androidui.customview.view.BezierView3
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <ramon.lee.androidui.customview.view.PathOther
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <ramon.lee.androidui.customview.view.PathMeasureBasic
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </LinearLayout>
