<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_basic_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/basic_notification" />

    <Button
        android:id="@+id/btn_basic_notification_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/basic_notification_fullscreen" />

    <Button
        android:id="@+id/btn_big_picture_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/big_picture_notification" />

    <Button
        android:id="@+id/btn_big_picture_notification2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/big_picture_scale" />

    <Button
        android:id="@+id/btn_large_text_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/large_text_notification" />

    <Button
        android:id="@+id/btn_in_box_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/in_box_notification" />

    <Button
        android:id="@+id/btn_conversation_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/conversation_notification" />

    <Button
        android:id="@+id/btn_media_control_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/media_control_notification" />

    <Button
        android:id="@+id/btn_custom_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom_notification" />
</LinearLayout>